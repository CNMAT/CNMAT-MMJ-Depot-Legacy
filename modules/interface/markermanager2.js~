outlets = 1;
var ar = new Array();
var selected = -1;

mgraphics.init();
mgraphics.autofll = 0;
mgraphics.relative_coords = 1;

function find_closest(ar, x)
{
    var diff = 1;
    var idx;
    for(var i = 0; i < ar.length; i++){
	var d = Math.abs(ar[i] - x);
	if(d < diff){
	    diff = d;
	    idx = i;
	}
    }
    return idx;
}

function onclick(x, y)
{
    if(cmdkeydown){
	var idx = find_closest(ar, x);
    }else{
	ar.push(x);
	ar = ar.sort();
    }
}

function ondrag(x, y)
{
if(selected){
ar[selected] = x;
}
}

